<h4>New Review</h4>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.label :rating %>
  <%= f.text_field :rating, input_html: { type: 'number' } %>
  <%= f.label :content %>
  <%= f.text_field :content  %>
  <%= f.submit %>
<% end %>

<%= link_to 'back', restaurant_reviews_path(@restaurant) %>
